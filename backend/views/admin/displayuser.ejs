<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title" style="color: #1b7e5a;margin-bottom: 20px;font-weight: bold;text-align: -webkit-center">User List </h3>
                    </div><!-- /.box-header -->
                    <div class="box-body" style="overflow-x:auto;">
                        <table id="example" class="table table-striped table-bordered" cellspacing="0"
                               width="100%">
                            <thead>
                            <tr>
                                <th>No</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>USer Name</th>
                                <th>Email</th>
                                <th>Password</th>
                                <th>Address</th>
                                <th>Phone No</th>
                                <th>City</th>
                                <th>State</th>
                                <th>Country</th>
                                <th>Gender</th>
                                <th>Hobbies</th>
                                <th>Birthdate</th>
                                <th>Device Token</th>
                                <th>Device Type</th>
                                <th>User Type</th>
                                <th>Status</th>
                                <th>Profile Pic</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>

                            <%
                            if(userData.length!=0){
                                var i=1;
                            userData.forEach(function(data){
                            %>

                            <tr>
                                <td> <%=i; %></td>
                                <td> <%=data.first_name %> </td>
                                <td> <%=data.last_name %></td>
                                <td> <%=data.user_name %></td>
                                <td> <%=data.email %></td>
                                <td> <%=data.password %></td>
                                <td> <%=data.address %></td>
                                <td> <%=data.phone_no %></td>
                                <td> <%=data.city_name %></td>
                                <td> <%=data.state_name %></td>
                                <td> <%=data.country_name %></td>
                                <td> <%=data.gender %></td>
                                <td> <%=data.hobbies %></td>
                                <td> <%=data.birthdate %></td>
                                <td> <%=data.device_token %></td>
                                <td> <%=data.device_type %></td>
                                <td> <%=data.user_type %></td>
                                <td> <%=data.status %></td>
                                <td>
                                    <img src="http://localhost:3000/profile_pictures/<%=data.profile_pic %>" alt="profile pic" width="100px" height="100px">
                                </td>
                                <td> <a href="/edit_user/edit_displayuser/<%-data.id-%>" style="color:green;">Edit</a> |
                                    <a href="/alluser/user_delete/<%-data.id-%>">Delete</a></td>

                            </tr>
                            <%  i++; }) %>
                            <% } else{ %>
                                <tr>
                                    <td colspan="7">No Data Found</td>
                                </tr>
                            <% } %>

                            </tbody>
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->

            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->


